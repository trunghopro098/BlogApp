<div class="container" style="margin-top: 30px;">

    <h3 style="text-align: center;">DANH SÁCH KHÓA HỌC</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">TÊN KHÓA HỌC</th>
                <th scope="col">MÔ TẢ</th>
                <th scope="col">NGÀY BẮT ĐẦU</th>
                <th scope="col" colspan="2">CẬP NHẬT KHÓA HỌC</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses  }}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{ this.name }}</td>
                <td>{{this.description}}</td>
                <td>{{this.createdAt}}</td>
                <td >
                    <a href="/me/updateCourse/{{this._id}}/edit">sửa</a>
                    
                </td>
                <td>
                    <a href="/me/delete/{{this._id}}">xóa</a>
                </td>
            </tr>

            {{/each }}
    
        </tbody>
</table>
</div>